<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageLayoutImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="15sp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageLayoutTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/recommended_cornered"
        app:srcCompat="@drawable/ic_image" />

    <TextView
        android:id="@+id/imageLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:maxLength="20"
        android:text="by Emad anwer gassssssssssssssssssssssssssssssssssssssss"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageLayoutImageView"
        app:layout_constraintStart_toStartOf="@+id/imageLayoutImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>